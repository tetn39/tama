{
    "name": "おすすめレシピ",
    "child": [
      {
        "name": "新鮮卵のカルボナーラ",
        "img": "https://thumb.photo-ac.com/57/5788c6a039c2aa800a686929f645bd05_w.jpeg",
        "author": "masui",
        "href": "#",
        "ingredients": [
          "新鮮な卵",
          "ベーコン",
          "パルメザンチーズ",
          "クリーム",
          "ブラックペッパー",
          "スパゲッティ"
        ],
        "instructions": [
          "ボイリングウォーターでスパゲッティを茹で、アルデンテに仕上げる。",
          "ベーコンを炒め、脂が溶け出したら取り出す。",
          "卵黄をクリームと混ぜ、パルメザンチーズを加えてよく混ぜる。",
          "スパゲッティにソースを絡め、ベーコンとブラックペッパーをトッピングする。",
          "お好みでさらにパルメザンチーズを振りかけて完成。"
        ]
      },
      {
        "name": "郷土料理ほうとう",
        "img": "https://thumb.photo-ac.com/2d/2d414246213f8bb973487992ea1a3d68_w.jpeg",
        "author": "masui",
        "href": "#",
        "ingredients": [
          "蕎麦粉",
          "小麦粉",
          "水",
          "キャベツ",
          "長ねぎ",
          "油揚げ",
          "だし",
          "醤油"
        ],
        "instructions": [
          "蕎麦粉、小麦粉、水を混ぜて生地を作り、のし棒で伸ばして切る。",
          "キャベツ、長ねぎ、油揚げを食べやすい大きさに切る。",
          "だしをとり、醤油で味付けする。",
          "具材をだしに加え、生地を入れて煮る。",
          "ほうとうが煮えたら完成。"
        ]
      },
      {
        "name": "デミグラスソースハンバーグ",
        "img": "https://thumb.photo-ac.com/26/26a518a4e279705d19597e80aa889e44_w.jpeg",
        "author": "masui",
        "href": "#",
        "ingredients": [
          "牛ひき肉",
          "パン粉",
          "牛乳",
          "玉ねぎ",
          "にんじん",
          "ウスターソース",
          "ケチャップ",
          "デミグラスソース"
        ],
        "instructions": [
          "玉ねぎとにんじんをみじん切りにし、牛ひき肉と混ぜる。",
          "パン粉を牛乳に浸しておき、肉に混ぜる。",
          "ウスターソース、ケチャップ、デミグラスソースを加え、よく混ぜる。",
          "混ぜた肉をハンバーグの形に成形し、焼くかオーブンで焼き上げる。",
          "ソースをかけて完成。"
        ]
      },
      {
        "name": "ふわふわチョコバナナワッフル",
        "img": "https://thumb.photo-ac.com/f8/f804f4743eca129a1ab48662c37f2402_w.jpeg",
        "author": "masui",
        "href": "#",
        "ingredients": [
          "薄力粉",
          "ベーキングパウダー",
          "砂糖",
          "卵",
          "牛乳",
          "溶かしバター",
          "バナナ",
          "チョコレートチップ"
        ],
        "instructions": [
          "薄力粉、ベーキングパウダー、砂糖をボウルで混ぜる。",
          "別のボウルで卵を溶きほぐし、牛乳と溶かしバターを加える。",
          "湿気のある材料をドライな材料に加え、混ぜる。",
          "バナナとチョコレートチップを生地に加え、さらに混ぜる。",
          "ワッフルメーカーで焼き上げて完成。"
        ]
      },
      {
        "name": "秋の味覚さつまいもご飯",
        "img": "https://thumb.photo-ac.com/22/2226cc50fac1050ba6b4ca17e0fbb288_w.jpeg",
        "author": "masui",
        "href": "#",
        "ingredients": [
          "さつまいも",
          "ご飯",
          "だし",
          "醤油",
          "みりん",
          "砂糖"
        ],
        "instructions": [
          "さつまいもを薄切りにし、ご飯と混ぜる。",
          "だし、醤油、みりん、砂糖を加え、よく混ぜる。",
          "炊飯器で炊くか、鍋で蒸して完成。"
        ]
      },
      {
        "name": "紅はるかで作るスイートポテト",
        "img": "https://thumb.photo-ac.com/7c/7cf6f266750cf83fcf808704d2b46a6d_w.jpeg",
        "author": "masui",
        "href": "#",
        "ingredients": [
          "紅はるか",
          "砂糖",
          "生クリーム",
          "バター",
          "卵黄",
          "パイ生地"
        ],
        "instructions": [
          "紅はるかを蒸してつぶし、砂糖、生クリーム、バター、卵黄を加えて混ぜる。",
          "パイ生地を敷き詰め、生地の上に紅はるかのクリームを流し込む。",
          "オーブンで焼いて完成。"
        ]
      },
      {
        "name": "本格チョコクロワッサン",
        "img": "https://thumb.photo-ac.com/a2/a27acde8706fc61bbbd0996f18ae460a_w.jpeg",
        "author": "masui",
        "href": "#",
        "ingredients": [
          "クロワッサン生地",
          "チョコレート"
        ],
        "instructions": [
          "クロワッサン生地を開く。",
          "チョコレートを生地に包み込み、巻く。",
          "オーブンで焼いて完成。"
        ]
      }
    ]
  }
  
